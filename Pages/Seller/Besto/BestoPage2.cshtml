@page
@model RsDistributors.Pages.Seller.Besto.BestoPage2Model
@{
}
<div class="container product-container">
    <div class="row"></div>

    <div class="row">
        <div class="col-lg-3">
            <h3 class="product-details text-danger">Billing Details</h3>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Name</label>
                <asp:DropDownList class="form-control" ID="droSeller" runat="server" OnSelectedIndexChanged="droSeller_SelectedIndexChanged" AutoPostBack="true"></asp:DropDownList>
            </div>

            <div class="mb-3"> 
                <label for="exampleInputEmail1" class="form-label">Product Price</label>
                <asp:TextBox class="form-control" ID="textPrice" runat="server" ReadOnly="True"></asp:TextBox>
            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Quintity</label>
                <asp:TextBox class="form-control" ID="textQut" runat="server" OnTextChanged="textQutBesto_TextChanged"></asp:TextBox>
            </div>

            <div hidden class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Total</label>
                <asp:TextBox class="form-control" ID="textTotal" runat="server" ></asp:TextBox>
            </div>

            <div>
                <asp:Button Class="btn btn-danger product-btn" ID="AddToBillBtn" runat="server" Text="Add To Bill" OnClick="AddToBillBtn_Click" />
                <asp:Button Class="btn btn-danger product-btn" ID="BTNPrint" runat="server" Text="Print" OnClientClick="javascript:printDiv('div1')" />
                <label id="ErrMsg" runat="server" class="text-primary"></label>
            </div>
        </div>
        <div class="col-lg-1"></div>

        <div  id="div1" class="col-lg-8 invbox " style="background-color: white; margin: 10px 0 100px 0;">
             <div id="printdiv">
                <div class="row">
                    <div class="col-xs-12">
    		            <div class="invoice-title">
    			            <h2 style="margin-top:20px; ">Invoice</h2>
    		            </div>
    		            <hr>

    		           <div class="row">
    			            <div class="col-6">
    				            <address>
                                <p>Pure Green<br />Homagama,<br />Colombo,<br />011 550046.</p>
    				            </address>
    			            </div>
    			            <div class="col-6 text-end">
    				            <address>
        			            <strong>Shop Name</strong>
                                    <p><asp:Label ID="ShopNameLabel" runat="server" Text="-"></asp:Label></p>
    				            </address>
    			            </div>
    		            </div>

               		   <div class="row">
    			            <div class="col-6">
    				            <address>
    					            <strong>Seller</strong>
                                    <p>Kasun</p>
    				            </address>
    			            </div>
    			            <div class="col-6 text-end">
    				            <address>
    					            <strong>Order Date</strong>
                                      <div id="current_date">
                                           <script>
                                               date = new Date();
                                               year = date.getFullYear();
                                               month = date.getMonth() + 1;
                                               day = date.getDate();
                                               document.getElementById("current_date").innerHTML = month + "/" + day + "/" + year;
                                           </script>
                                       </div>
    				            </address>
    			            </div>
    		            </div>


    	            </div>
                </div>


                <div class="row">
    	            <div class="col-md-12">
    		            <div class="panel panel-default">
                            <asp:GridView ID="GridViewBill" runat="server" class="table"></asp:GridView>
    		            </div>
    	            </div>
                </div>


                <div class="row">
                    <div class="col-6"></div>
                     <div class="col-6">
   		                <div class="row">
   			                <div class="col-x-6">
   			                </div>
   		                </div>
   		                <div class="row">
   			                <div class="col-xs-6 text-end">
                                   <div>
                                       <strong>Total</strong>
                                       <p><asp:Label ID="Label1" runat="server" Text="0"></asp:Label></p>
                                   </div>
   			                </div>
   		                </div>
   	                </div>
                    <hr>

                <p class="text-center">Powered By ©️ Ocquita</p>
  
                </div>
            </div>     
        </div>
    </div>
     </div>

    	<script>
            function printDiv(printdiv) {
                var printContents = document.getElementById(printdiv).innerHTML;
                var originalContents = document.body.innerHTML;
                document.body.innerHTML = printContents;
                window.print();
                document.body.innerHTML = originalContents;
            }
        </script>
