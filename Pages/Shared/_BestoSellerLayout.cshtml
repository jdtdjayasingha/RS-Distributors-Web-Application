<!DOCTYPE html>

<html>
    <head>
        <title>RS Distributors</title>
        <meta charset="UTF-8"/>
        <meta name="author" content="JD"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/> 
        <link rel="icon" type="image/x-icon" href="~/lib/img/mainLogo.png"/>
        
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/js/bootstrap.bundle.min.js"></script>
        <link href="~/css/sites.css" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    </head>
    <body onload="myFunction()">
        <div id="mySidenav" class="sidenav">
            <div>
                <ul class="navbar-nav navbar-link navul">

                   <li class="nav-item nav-link-item">
                         <a class="nav-link nav-sidebar" href="~/Seller/Besto/BestoPage2">New Bill</a>
                    </li>

                    <li class="nav-item nav-link-item">
                      <a class="nav-link nav-sidebar" href="~/index">Logout</a>
                   </li>

                    <li>
                        <div class="loginFooterSideOne">  
                            <p class="loginFooterSide1">Powered By ©️ JD</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <nav class="navbar  navbar-expand-lg navigation-bar " id="darknav">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img class="side-logo-img" src="~/lib/img/sideLogo.png" />
                </a>
        
                <button id="myDIV" class="navbar-toggler" type="button"  data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776</span>
                </button>
    
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav navbar-link">

                        <li class="nav-link-item nav-sel">
                            <a class="nav-link" href="~/Seller/Besto/BestoPage2">New Bill</a>
                        </li>

                        <li class="nav-link-item">
                            <a class="nav-link nav-link-item-logout" href="~/index">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        

        <div class="loginFooter loginFooterTwo ">  
            <p class="loginFooterText">Powered By ©️ JD</p>
        </div>

        <form id="form1" runat="server" >
            <div>
                
                <button id="backbut" href="javascript:void(0)" class="hideclosebtn" onclick="closeNav()"></button>
               
                <asp:ContentPlaceHolder ID="SellerBody" runat="server">
                </asp:ContentPlaceHolder>
            </div>
        </form>

        <script>
            function openNav() {
                document.getElementById("mySidenav").style.width = "75%";
                document.getElementById("backbut").style.opacity = "0.5";
                //document.getElementById("darknav").style.backgroundColor = "rgba(0,0,0, 0.004)";
                //document.body.style.backgroundColor = "rgba(0,0,0, 0.01)"
                var x = document.getElementById("myDIV");
                if (x.style.display === "none") {
                    x.style.display = "block";
                 } else {
                    x.style.display = "none";
                }
                var x = document.getElementById("backbut");
                if (x.style.display === "block") {
                    x.style.display = "block";
                } else {
                    x.style.display = "block";
                }
             }

            function closeNav() {
                document.getElementById("mySidenav").style.width = "0";
                document.body.style.backgroundColor = "white";
                var x = document.getElementById("myDIV");
                if (x.style.display === "none") {
                    x.style.display = "block";
                 } else {
                    x.style.display = "none";
                }
                var x = document.getElementById("backbut");
                if (x.style.display === "none") {
                    x.style.display = "none";
                } else {
                    x.style.display = "none";
                }
            }

            function myFunction() {
                var x = document.getElementById("backbut");
                if (x.style.display === "none") {
                    x.style.display = "none";
                } else {
                    x.style.display = "none";
                }
            }
        </script>
        @RenderBody()
    </body>
</html>