@page
@model RsDistributors.Pages.Admin.ProductModel
@{
}
 <div class="container seller-container">
        <div class="row"></div>

       <div class="row">
            <form method="post" class="col-lg-3">
                <h3 class="product-details text-danger">Product Details</h3>

                 <div class="mb-3">
                    <label for="CategoryTb" class="form-label">Product Category</label>
                    <div>
                        <select class="form-control" asp-for="Product.Category" asp-items="Model.Categories"></select>
                        <span style="color:red;" asp-validation-for="Product.Category"></span>
                   </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Name" class="form-label">Product Name</label>
                    <input type="text" class="form-control" asp-for="Product.Name">
                    <span style="color:red;" asp-validation-for="Product.Name"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label">Product Price</label>
                    <input type="text" class="form-control" asp-for="Product.Price" placeholder="Per kilo or piece">
                    <span style="color:red;" asp-validation-for="Product.Price"></span>
                </div>

                <div>
                    <button class="btn btn-danger product-btn" type="submit" asp-page-handler="SaveProduct">Save</button><br/><br/>
                    <span>@Model.ErrMsg</span>
                </div>
            </form>
            <div class="col-lg-9 table-responsive mb-5">
                <h3 class="text-danger mb-3">Product List</h3>
                <table class="table table-bordered table-hover mb-4">
                    <thead class="table-danger">
                        <tr>
                            <th>Category</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Product in Model.Products)
                        {
                            <tr>
                                <td>@Product.Category</td>
                                <td>@Product.Name</td>
                                <td>Rs @Product.Price.00</td>
                                <td>
                                    <div style="display: flex; gap: 7px;">
                                    <a style="width: 60px;" class="btn btn-sm btn-warning mb-1" asp-page-handler="EditProduct" asp-route-id="@Product.ID">Edit</a>
                                    <a style="width: 60px;" class="btn btn-sm btn-danger mb-1" asp-page-handler="DeleteProduct" asp-route-id="@Product.ID">Delete</a>
                                    </div>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>