@page
@model RsDistributors.Pages.Admin.ProductModel
@{
}

    <div class="container product-container">
        <div class="row"></div>

        <div class="row">
            <div class="col-lg-3">
                <h3 class="product-details text-danger">Product Details</h3>

                <div class="mb-3">
                    <label for="CategoryTb" class="form-label">Product Category</label>
                    <div>
                       <asp:DropDownList class="form-control" ID="droCategoryProduct" runat="server" >
                           <asp:ListItem>Besto</asp:ListItem>
                           <asp:ListItem>Delmo</asp:ListItem>
                       </asp:DropDownList>
                   </div>
                </div>

                <div class="mb-3">
                    <label for="PNameTb" class="form-label">Product Name</label>
                    <input id="NameProduct" type="text" class="form-control" runat="server"/>
                </div>

                <div class="mb-3" hidden>
                    <label for="ProdQtyTb" class="form-label">Product Quantity</label>
                    <input type="text" class="form-control" id="texQtyProduct" runat="server" value="1" ReadOnly="True">
                </div>

                <div class="mb-3">
                    <label for="PriceTb" class="form-label">Product Price</label>
                    <input type="text" class="form-control" id="texPriceProduct" runat="server" placeholder="Per kilo or piece">
                </div>

                <button type="submit" asp-page-handler="editBtnClick" class="btn btn-danger product-btn" id="editBtn">Edit</button>
                <button type="submit" asp-page-handler="saveBtnClick" class="btn btn-danger product-btn" id="saveBtn">Save</button>
                <button type="submit" asp-page-handler="deleteBtnClick" class="btn btn-danger product-btn" id="deleteBtn">Delete</button>

                <label id="ErrMsg" runat="server" class="text-danger"></label>
            </div>

            <div class="col-lg-9 table-responsive">
                <asp:GridView runat="server" class="table table-bordered table-hover" ID="gridViewProduct" AutoGenerateSelectButton="True" OnSelectedIndexChanged="gridViewProduct_SelectedIndexChanged">
                </asp:GridView>
            </div>
        </div>
    </div>
