@page
@model RsDistributors.Pages.Admin.ShopModel
@{
}
<div class="container seller-container">
        <div class="row"></div>

       <div class="row">
            <div class="col-lg-3">
                <h3 class="product-details text-danger">Seller Details</h3>

                 <div class="mb-3">
                    <label for="CategoryTb" class="form-label">Seller Category</label>
                    <div>
                       <asp:DropDownList class="form-control" ID="droCategorySeller" runat="server" >
                           <asp:ListItem>Besto</asp:ListItem>
                           <asp:ListItem>Delmo</asp:ListItem>
                       </asp:DropDownList>
                   </div>
                </div>

                <div class="mb-3">
                    <label for="SNameTb" class="form-label">Seller Name</label>
                    <input type="text" class="form-control" id="inpNameSeller" runat="server">
                </div>

                <div class="mb-3">
                    <label for="SEmailTb" class="form-label">Seller Email</label>
                    <input type="Email" class="form-control" id="inpEmailSeller" runat="server">
                </div>

                <div class="mb-3">
                    <label for="PhoneTb" class="form-label">Seller Phone</label>
                    <input type="text" class="form-control" id="inpPhoneSeller" runat="server">
                </div>

                <div class="mb-3">
                    <label for="sellernicTb" class="form-label">Seller NIC</label>
                    <input type="text" class="form-control" id="inpNicSeller" runat="server">
                </div>

                <div class="mb-3">
                    <label for="SellAddressTb" class="form-label">Seller Address</label>
                    <input type="text" class="form-control" id="inpAddressSeller" runat="server">
                </div>

                <div class="mb-3">
                    <label for="sellerPassTb" class="form-label">Seller Password</label>
                    <input type="text" class="form-control" id="inpPasswordSeller" runat="server">
                </div>

                <div>
                    <asp:Button text="  Edit  " Class="btn btn-danger product-btn" runat="server" ID="Button1" OnClick="btnEditSeller_Click" />
                    <asp:Button text=" Save " Class="btn btn-danger product-btn" runat="server" ID="Button2" OnClick="btnSaveSeller_Click" />
                    <asp:Button text="Delete" Class="btn btn-danger product-btn" runat="server" ID="Button3" OnClick="btnDeleteSeller_Click" /><br /><br />
                    <label id="ErrMsg" runat="server" class="text-primary"></label>
                </div>
            </div>
                <div class="col-lg-9 table-responsive">
                    <asp:GridView runat="server" class="table table-bordered table-hover" ID="gridViewSeller" AutoGenerateSelectButton="True" OnSelectedIndexChanged="gridViewSeller_SelectedIndexChanged">
                    </asp:GridView>
                </div>
        </div>
    </div>